{
  "name": "cortexalgo-desktop",
  "version": "0.1.0-beta.19",
  "description": "CortexAlgo Desktop - Cloud-Hybrid Trading Platform",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --win",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "trading",
    "desktop"
  ],
  "author": "Mahboob shah Mohammed",
  "license": "ISC",
  "dependencies": {
    "@microsoft/signalr": "^9.0.6",
    "axios": "^1.12.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.1.7",
    "keytar": "^7.9.0",
    "node-machine-id": "^1.1.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.4"
  },
  "build": {
    "appId": "com.cortexalgo.desktop",
    "productName": "CortexAlgo",
    "directories": {
      "output": "dist"
    },
    "icon": "assets/icon.png",
    "files": [
      "main.js",
      "preload.js",
      "public/**/*",
      "src/**/*",
      "services/**/*",
      "config.js",
      "assets/**/*"
    ],
    "afterSign": "scripts/afterSign.js",
    "mac": {
      "category": "public.app-category.finance",
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": {
      "provider": "github",
      "owner": "shah0516",
      "repo": "cortexalgo-desktop"
    }
  }
}
