{
  "name": "cortexalgo-desktop",
  "version": "0.1.0-beta.1",
  "description": "CortexAlgo Desktop - Cloud-Hybrid Trading Platform",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "trading",
    "desktop"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "@microsoft/signalr": "^9.0.6",
    "axios": "^1.12.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.1.7",
    "keytar": "^7.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.4"
  },
  "build": {
    "appId": "com.cortexalgo.desktop",
    "productName": "CortexAlgo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "public/**/*",
      "src/**/*",
      "services/**/*",
      "config.js",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": {
      "provider": "github",
      "owner": "shah0516",
      "repo": "cortexalgo-desktop"
    }
  }
}
